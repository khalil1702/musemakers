<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="186.0" prefWidth="237.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.esprit.controllers.ReservationController">
    <stylesheets>
        <URL value="@../style.css" />
    </stylesheets>
    <VBox alignment="CENTER" spacing="10" styleClass="form-container">
        <Label styleClass="form-title" text="Réserver des tickets" />
        <Label fx:id="expositionDetailsLabel" styleClass="exposition-details-label" />
        <Label text="saisir nombre de ticket" />
        <TextField fx:id="ticketsTextField" promptText="Nombre de tickets" styleClass="text-field" />
        <Button onAction="#reserveTickets" styleClass="submit-button" text="Réserver" />
    </VBox>
</AnchorPane>

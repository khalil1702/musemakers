<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.ChatbotController"
      alignment="CENTER"
      spacing="10">

    <TextArea fx:id="chatArea" prefHeight="300.0" prefWidth="400.0" wrapText="true" editable="false"/>

    <TextField fx:id="messageField" promptText="Enter your message..." prefWidth="300.0" />

    <Button fx:id="sendButton" text="Send" onAction="#sendMessage"/>

</VBox>
